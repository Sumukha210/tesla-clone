{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/element/*": [
        "./src/components/elements/*"
      ],
      "@/layout/*": [
        "./src/components/layouts/*"
      ],
      "@/module/*": [
        "./src/components/modules/*"
      ],
      "@/types/*": [
        "./src/components/types/*"
      ],
      "@/shared/*": [
        "./src/components/shared/*"
      ],
      "@/utils/*": [
        "./src/components/utils/*"
      ],
      "@/customHook/*": [
        "./src/components/customHooks/*"
      ],
      "@/assets/*": [
        "./src/assets/*"
      ],
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/components/customHooks/useIsomorphicLayoutEffect.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}